<%- include("./menu") %>
<%- include("../partials/header") %>

<form action="/add_city" method="POST">

    <div class="w3-main" style="margin-left:300px;">
    <div class="sign-in-form">
        <header class="w3-container" style="padding-top:22px">
            <h3><b><i class="fa fa-plus"></i> Add City</b></h3>
        </header>
        <hr>
               
            <div class="log-input">
                <div class="log-input-center">
                    <label><b>City Name *</b></label>
                   <input type="text" name="city_name" class="user" value="Enter city name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter city name';}"
                   onkeypress="return (event.charCode > 64 && event.charCode < 91) || (event.charCode > 96 && event.charCode < 123) || (event.charCode==32)"/>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="log-input">
                <div class="log-input-left">
                    <label><b>Status  </b></label>
                    <select class="form-control" style="height:40px;width: 108%;border-radius: 0%;border-width: 1px;" type="text" name="status" class="user" required aria-placeholder="Your City"
                        onfocus="this.value = '';"
                        onblur="if (this.value == '') {this.value = 'Your City';}">
                    <option>Active</option>
                    <option>Deactive</option>
                    </select>
                </div>
                <div class="clearfix"> </div>
            </div>
            <hr>
            <input style="background: black;
            background-color: black;
            border-radius: 34rem;
            border: none;
            color: white;
            font-size: 14px;
            font-weight: bold;
            height: 40px" type="submit" value="Add">
             
        </div>
        
    </div>
    

</form>