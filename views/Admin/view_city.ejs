<%- include("./menu") %>
<%- include("../partials/header") %>
<div class="w3-main" style="margin-left:300px;">

    <header class="w3-container" style="padding-top:22px">
        <center><h3><b><i class="fa fa-list"></i> View City</b></h3></center>

    </header><hr>
    <div>
<center>
<table class="table" style="width: 50%;background-color: white;">
    <thead>
      <tr><center>
        <th style="text-align: left;"><h3>City name</h3></th>
        <th style="text-align: left;"><h3>Status</h3></th>
        <th style="text-align: right;"><h3>Action</h3></th>
        </center>
      </tr>
    </thead>
    <tbody>
      <%if (records.length >0){ %>
      <% records.forEach(function(row){ %>
      <tr>
        <%if (row.status == 'Active'){ %>
          <td><h4 style="color:darkgreen;"><%= row.city_name %></h4></td>
          <td><h4 style="color:darkgreen;"><%= row.status %></h4></td>
          <% }else{ %>
          <td><h4 style="color:red;"><%= row.city_name %></h4></td>
        <% } %>
        <%if (row.status == 'Active'){ %>
          <td><a href='/Removecity/<%= row.city_name %>' class="form-control" style="float:right;width:50%;background-color:Red;color: white;"><center>DeActive</center></td>
          <% }%>
           <% }) %>
        
      </tr>
      <% }else{ %>
        <tr>
            <td colspan="6">No Record Found</td>
            
          </tr>
        <% } %>
    </tbody>
  </table></center></div>

