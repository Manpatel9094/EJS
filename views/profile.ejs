    <center><br>
        <br><br><br><br> 
               <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4><center>User Profile</center></h4>
                        </div>
                        <div class="panel-body">
                            <div class="box box-info">
                                <div class="box-body">
                                    <div class="col-lg-12">
                                         <img alt="User Pic" src="/images/<%= user.image %>" style="height:250px" id="profile-image1" class=" img-responsive"> 
                                            <input id="profile-image-upload" class="hidden" type="file">
                                            <div style="color:#999;" ></div>
                                        <br>
                                    </div>
                                        <h4 style="color:#00b1b1;"><%= user.username %> </h4></span>
                                    <div class="clearfix"></div>
                                    <hr style="margin:5px 0 5px 0;">
                                    <div class="clearfix"></div>
                                    <div class="bot-border"></div>
                                    <div class="col-sm-5 col-xs-6 tital " >Email:</div>
                                    <div class="col-sm-7"><%= user.email %></div>
                                    <div class="clearfix"></div>
                                    <div class="bot-border"></div>
                                    <div class="col-sm-5 col-xs-6 tital " >Contact No.:</div>
                                    <div class="col-sm-7"><%= user.phone %></div>
                                    <div class="clearfix"></div>
                                    <div class="bot-border"></div>
        
                                    <div class="col-sm-5 col-xs-6 tital " >Address</div>
                                    <div class="col-sm-7"><%= user.address %></div>
        
                                    <div class="clearfix"></div>
                                    <div class="bot-border"></div>
        
                                    <div class="col-sm-5 col-xs-6 tital " >City</div>
                                    <div class="col-sm-7"><%= user.city %></div>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>  
            <script>
                      $(function() {
            $('#profile-image1').on('click', function() {
                $('#profile-image-upload').click();
            });
        });       
                      </script> 
               
               
            </div>
        </div>
